<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.bluejack16_2.edmusiclo.MusicLyricFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="1dp"
        android:background="#4DB6AC" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyricsListView"
        >

    </ListView>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/loading4"
        android:layout_centerInParent="true"
        android:id="@+id/loadingLyric"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Couldn't find lyrics"
        android:layout_centerInParent="true"
        android:id="@+id/tvLyricNotFound"
        android:textColor="#4DB6AC"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#4DB6AC" />

</RelativeLayout>
