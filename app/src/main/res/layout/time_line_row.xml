<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99020c1c"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timelineTopLayout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bruno_mars"
                android:id="@+id/timelineProfilePicture"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tvTimeLineProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bruno Mars"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/timelineProfilePicture"
                android:layout_marginTop="17dp"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timelineProfilePicture"
                android:text="Now Listening to Uptown Funk"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/tvTimeLineContent"
                android:textColor="#fff"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timelineTopLayout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_like"
                android:layout_marginStart="10dp"
                android:id="@+id/btnLike"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_comment"
                android:id="@+id/btnComment"
                android:layout_toEndOf="@id/btnLike"
                android:layout_marginStart="10dp"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>